<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <TextView
            android:layout_marginTop="50dp"
            android:textColor="#0101C4"
            android:textSize="14sp"
            android:gravity="center"
            android:text="Enter Verification code"
            android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <TextView
            android:padding="4dp"
            android:layout_marginTop="30dp"
            android:textColor="#777676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="We have sent you a 6 digit Verification code on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:padding="5dp"
            android:textColor="#777676"
            android:textSize="14sp"
            android:gravity="center"
            android:text="+91 - 9431410921"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.goodiebag.pinview.Pinview
            android:layout_marginTop="5dp"
            android:id="@+id/pin_otp"
            app:pinBackground="@drawable/rectangle_drawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:pinWidth="35dp"
            app:pinHeight="35dp"
            app:pinLength="6"
            android:elevation="10dp"
            app:cursorVisible="true"
            app:forceKeyboard="false"
            app:inputType="number"
            app:password="false"/>


    <TextView
            android:id="@+id/tv_timer"
            android:padding="10dp"
            android:textColor="#17691B"
            android:textSize="14sp"
            android:gravity="center"
            android:text="00:58"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


       <RelativeLayout
               android:gravity="center"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
              android:layout_height="wrap_content">

           <TextView
                   android:id="@+id/mess"
                   android:textColor="#777676"
                   android:textSize="14sp"
                   android:gravity="center"
                   android:text="Did't get the code?"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           <TextView
                   android:layout_marginStart="5dp"
                   android:layout_toRightOf="@+id/mess"
                   android:id="@+id/resentOTP"
                   android:textColor="#9797E0"
                   android:textSize="14sp"
                   android:gravity="center"
                   android:enabled="false"
                   android:text="Resend code"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>


       </RelativeLayout>

    <EditText
            android:layout_margin="20dp"
            android:hint="Enter number"
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


     <Button android:layout_width="match_parent"
             android:id="@+id/btn"
             android:layout_marginTop="20dp"
             android:layout_marginStart="60dp"
             android:layout_marginEnd="60dp"
             android:text="Submit"
             android:layout_height="wrap_content"/>




</LinearLayout>